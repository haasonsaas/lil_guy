  "name": "vite_react_shadcn_ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && bun run generate-metadata && bun run generate-rss && bun run generate-sitemap",
    "generate-metadata": "bun run scripts/generate-opengraph-metadata.ts",
    "build:dev": "vite build --mode development && bun run generate-rss && bun run generate-sitemap",
    "generate-blog-images": "bun run scripts/generateBlogImages.ts",
    "migrate-to-webp": "bun run scripts/migrateToWebP.ts",
    "generate-fallbacks": "bun run scripts/generate-image-fallbacks.ts",
    "generate-rss": "bun run scripts/generateStaticRSS.ts",
    "generate-sitemap": "bun run scripts/generateSitemap.ts",
    "watch:images": "bun run scripts/watchBlogImages.ts",
    "new-post": "bun run scripts/new-post.ts",
    "new-post-with-coach": "bun --env-file=.env run scripts/new-post-with-coach.ts",
    "search": "bun run scripts/search.ts",
    "publish": "bun run scripts/publish-post.ts",
    "check:deploy": "bun run scripts/check-deploy.ts",
    "preview:cf": "bun run build && wrangler pages dev ./dist --compatibility-date=2024-01-01",
    "setup:secrets": "bun run scripts/setup-secrets.ts",
    "new-interactive": "bun run scripts/new-interactive-component.ts",
    "stats": "bun run scripts/writing-stats.ts",
    "drafts": "bun run scripts/draft-analyzer.ts",
    "ideas": "bun run scripts/content-ideas.ts",
    "momentum": "bun run scripts/momentum.ts",
    "perf": "bun run scripts/performance-report.ts",
    "lighthouse": "bun run scripts/lighthouse-audit.ts",
    "perf:test": "bun run scripts/test-performance-api.ts",
    "test:analytics": "bun run scripts/test-analytics-service-worker.ts",
    "setup:automation": "bun --env-file=.env run scripts/setup-automation.ts",
    "test:automation": "bun --env-file=.env run scripts/test-auto-blog.ts",
    "gemini": "bun --env-file=.env run scripts/gemini.ts",
    "claude": "bun --env-file=.env run scripts/claude.ts",
    "ai-orchestrator": "bun --env-file=.env run scripts/ai-orchestrator.ts",
    "enhanced-pipeline": "bun --env-file=.env run scripts/enhanced-pipeline.ts",
    "jonathan-voice": "bun --env-file=.env run scripts/jonathan-voice.ts",
    "writing-coach": "bun --env-file=.env run scripts/writing-coach.ts",
    "lint": "git diff --name-only HEAD | xargs -r -I {} sh -c '[ -f {} ] && echo {}' | xargs -r biome ci",
    "lint:fix": "git diff --name-only HEAD | xargs -r -I {} sh -c '[ -f {} ] && echo {}' | xargs -r biome format --write",
    "lint:md": "markdownlint-cli2 src/posts/*.md",
    "spell": "cspell src/posts/*.md",
    "check:links": "find src/posts -name '*.md' -exec markdown-link-check {} \\;",
    "validate:seo": "bun run scripts/validateSEO.ts",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "prepare": "husky",
    "check:all": "bun run scripts/run-all-checks.ts",
    "precommit": "lint-staged",
    "fix:all": "bun run lint:fix && bun x markdownlint-cli2 --fix 'src/posts/*.md'"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome format --write"
    ],
    "src/posts/*.md": [
      "markdownlint-cli2 --fix",
      "cspell --no-must-find-files"
    ]
  },
